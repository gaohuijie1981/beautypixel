{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "bundler",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "noEmit": true,
    "rootDir": "./",
    "baseUrl": "./",
    "allowJs": true,
    "strict": false,
    "experimentalDecorators": true
  },
  "include": [
    "src",
    "test",
    "samples"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}